<Window x:Class="TBS_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TBS" Height="250" Width="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" Grid.Column="0" Grid.ColumnSpan="1" Text="\\n  О! Привет. Это моя первая, конченная, злоебучая игра " />
        <Button Grid.Column="0" Grid.Row="1" >Start Game</Button>
        <Button Grid.Column="0" Grid.Row="2">Load Game</Button>
        <Button Grid.Column="0" Grid.Row="3">Exit</Button>
    </Grid>
</Window>